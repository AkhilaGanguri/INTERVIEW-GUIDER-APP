<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="2dp"
        android:background="#FFA500"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="INTERVIEW GUIDER"
            android:textColor="#000000"
            android:textSize="30dp"/>
    </LinearLayout>

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="494dp"
        android:layout_below="@+id/navbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <!-- Added TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="SELECT YOUR DOMAIN !!"
            android:textStyle="bold|italic"
            android:textColor="#FFFEFE"
            android:textSize="28sp" />

        <!-- Web Development Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blanks"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/webDevelopmentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:text="Web Development"
                android:backgroundTint="#ffa500"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Cyber Security Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cyber"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/cyberSecurityButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:backgroundTint="#ffa500"
                android:layout_gravity="center_vertical"
                android:text="Cyber Security" />
        </LinearLayout>

        <!-- Data Science Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datascience"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/dataScienceButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:backgroundTint="#ffa500"
                android:layout_gravity="center_vertical"
                android:text="Data Science" />
        </LinearLayout>

        <!-- App Development Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/app"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/appDevelopmentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:backgroundTint="#ffa500"
                android:text="App Development"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navbar -->
    <LinearLayout
        android:id="@+id/navbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/radiustoolbar"
        android:orientation="horizontal">

        <!-- Home Button -->
        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:contentDescription="Home"
            android:onClick="goToHomePage"
            android:src="@drawable/home3" />

        <!-- Contact Us Button -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="264dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="Tips"
            android:onClick="goToTips"
            android:src="@drawable/ti" />

        <!-- Feedback Button -->
        <ImageView
            android:layout_width="264dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="Feedback"
            android:onClick="goToFeedback"
            android:src="@drawable/chat" />

        <!-- Contact Us Button -->
        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/telephone"
            android:contentDescription="Contact Us"
            android:onClick="goToContactUs" />
    </LinearLayout>
</RelativeLayout>
